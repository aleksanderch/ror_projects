<p id="notice"><%= notice %></p>
<p id="notice"><%= @user %></p>



<% @posts.each do |post| %>
          
          <div class="jumbotron">
            <tbody>
              <table>
                  <thead>
                    <tr>
                      <!-- <th><img src="" width="" height=""></th> -->
                      <th><h3><span class="label label-default"><%= post.title %></span></h3></th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tr>
                    <td><%= post.description %></td>
                  </tr>
                  <% if current_user %>
                    <tr>
                      <td>
                        <div class="btn-group">
                          <td><%= link_to 'Show', post, :class => "btn btn-primary btn-group" %></td>
                          <td><%= link_to 'Edit', edit_post_path(post), :class => "btn btn-primary btn-group" %></td>
                          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-group" %></td>
                        </div>
                      </td> 
                    </tr>
                    <tr>
                    <td class="label label-info"><%= post.created_at.in_time_zone.strftime("%B %d, %Y, %I:%M") %></td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
          </div>
<% end %>

<br>
<% if current_user %>
  <%= link_to 'New Post', new_post_path, :class => "btn btn-primary" %>
<% end %>
